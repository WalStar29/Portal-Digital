---
interface Props{
    text: string
	text2: string
}

const {text, text2} = Astro.props
---

<div class="botones">
    <button><a href={text2}>{text}</a></button>
</div>

<style>
    .botones{
		display: flex;
		justify-content: space-evenly;
		width: 100%;
	}

    button{
		padding: 2% 5%;
		border-radius: 10px;
		background-color: rgb(255, 246, 224);
		border: none;
		border: solid 1px rgb(0, 0, 0);
	}
</style>