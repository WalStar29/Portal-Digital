---
interface Props{
    text: string
 
}

const {text} = Astro.props
---

<div class="botones">
    <button>{text}</button>
</div>

<style>

    .botones{
        padding: 2% 0;
        display: flex;
        justify-content: space-evenly;
    }

    button{
        border: none;
        border-radius: 10px;
        padding: 1% 2%;
        background-color: rgb(255, 255, 255);
    }

    button:hover{
        background-color: rgb(79, 117, 255);
    }
</style>