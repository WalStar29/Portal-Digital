---
interface Props {
	user: string;
}

const { user } = Astro.props;
---

<div class="div">
    <div class="user">
        <h1>Administrador</h1>
        <h1>Sr/Sra {user} Bienvenido</h1>
    </div>
</div>

<style>
    .div{
        width: 60%;
        display: flex;
        text-align: center;
        align-items: center;
        text-align: center;
    }
    .user{
        width: 100%;
    }

    @media(max-width: 900px){
        .div{
            width: 100%;
            padding: 5% 0;
            font-size: 12px;
        }
    }

</style>