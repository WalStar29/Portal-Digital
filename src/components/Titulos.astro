---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<h1>{title}</h1>


<style>
	h1{
        margin: 2% 0;
        text-align: center;
        width: 100%;
        font-size: 200%;
        display: inline-block;
        text-transform: uppercase;
        transition:  .1s linear;
        color: rgb(0, 0, 0);
        background-size: 200%;
    }
</style>
